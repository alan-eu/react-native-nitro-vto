material {
    name : debug_plane_material,
    shadingModel : unlit,
    blending : transparent,
    depthWrite : false,
    depthCulling : true,
    doubleSided : true,
    colorWrite : true,
    parameters : [
        {
            type : float4,
            name : debugColor
        }
    ]
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor = materialParams.debugColor;
    }
}
